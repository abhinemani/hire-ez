.row.vendor-signup-container

  fieldset.span5

    h5 Contact Info

    .control-group
      label Name
      input(type="text", name="vendor[name]", value="#{$vendor['name']}")

    .control-group
      label Email
      input(type="text", name="vendor[email]")

    .control-group
      label Phone
      input(type="text", name="vendor[phone]")

    //- .control-group
