#bids-table
  tbody
    border none

  .main-bid
    bgc #EFEFEF
    &:hover
      background-color white

  .bid-sidebar
    ml 35px

    table
      width 100%

    .tabs-right
      border-top dotted 1px #CCC

  .vendor-name
    width 100%
    display block
    padding-top 10px
    padding-bottom 10px
    margin-top -10px
    margin-bottom -10px

  .bid-details-wrapper
    border 0
    padding 0
    bgc white

  .bid-details
    padding 8px

    h1, h2, h3
      fs 1.2em

    .projects-applied
      border-top dotted 1px #CCC
      pt 8px
      p
        fs .8em

    .well
      bgc white
      border-top none
      border-left none
      border-bottom none

    .nav-tabs
      float none
      ml -36px
      li
        a
          pl 36px
          mt 12px
          mb 5px
          font-weight bold
          text-decoration underline
      li.active
        a
          bgc white
          font-weight normal
          text-decoration none


  .anyone-read
    color #aaa
    font-family "News Cycle", "Arial Narrow Bold", sans-serif;
    position relative
    top 2px

.search-subheader
  height 20px
